variant: fcos
version: 1.1.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  core
    - name: ansible
      ssh_authorized_keys:
        - ssh-rsa  ansible
      groups:
        - core
        - adm
        - sudo
        - docker
        - wheel
storage:
  files:
    - path: "/etc/hostname"
      user:
        name: "root"
      group:
        name: "root"
      contents:
        inline: "{{ item.name }}"